<style>
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  background: #f5f7fa;
}

header {
  background: #0077cc;
  color: white;
  padding: 20px;
  text-align: center;
}

main {
  padding: 20px;
  max-width: 1200px;
  margin: 0 auto;
}

.card-btn {
  background: white;
  border: none;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 15px;
  box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  cursor: pointer;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  width: 100%;
  display: block;
}

.card-btn:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 15px rgba(0,0,0,0.2);
}

.card-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20px;
}

.card-section {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-section.left {
  justify-content: flex-start;
}

.card-section.center {
  justify-content: center;
}

.card-section.right {
  justify-content: flex-end;
}

.card-section h2 {
  margin: 0;
  color: #0077cc;
  font-size: clamp(18px, 3vw, 24px); /* Texto responsivo */
  text-align: right;
}

/* Imágenes base - se adaptan proporcionalmente */
.center-image,
.card-section.center img {
  height: auto;
  max-height: 150px;
  width: auto;
  max-width: 100%;
  object-fit: contain;
  border-radius: 8px;
}

.sign-image {
  width: auto;
  max-width: 120px;
  height: auto;
  max-height: 120px;
  object-fit: cover;
  border-radius: 8px;
}

.image-placeholder {
  height: auto;
  max-height: 150px;
  width: auto;
  background: #e0e0e0;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.image-placeholder img {
  height: auto;
  max-height: 150px;
  width: auto;
  max-width: 100%;
  object-fit: contain;
  border-radius: 8px;
}

/* Tablets (768px - 1024px) */
@media (max-width: 1024px) {
  main {
    padding: 15px;
  }

  .card-btn {
    padding: 15px;
  }

  .card-content {
    gap: 15px;
  }

  .sign-image {
    max-width: 100px;
    max-height: 100px;
  }

  .center-image,
  .card-section.center img,
  .image-placeholder,
  .image-placeholder img {
    max-height: 120px;
  }
}

/* Móviles (menos de 768px) */
@media (max-width: 768px) {
  main {
    padding: 10px;
  }

  .card-btn {
    padding: 15px;
    margin-bottom: 12px;
  }

  .card-content {
    flex-direction: column;
    gap: 12px;
  }

  .card-section {
    width: 100%;
  }

  .card-section.left,
  .card-section.right {
    justify-content: center;
  }

  .card-section h2 {
    text-align: center;
    font-size: 20px;
  }

  /* Reducir tamaño de imágenes en móviles */
  .sign-image {
    max-width: 90px;
    max-height: 90px;
  }

  .center-image,
  .card-section.center img,
  .image-placeholder,
  .image-placeholder img {
    max-height: 100px;
  }
}

/* Móviles pequeños (menos de 480px) */
@media (max-width: 480px) {
  header {
    padding: 15px;
  }

  main {
    padding: 8px;
  }

  .card-btn {
    padding: 12px;
    margin-bottom: 10px;
  }

  .card-content {
    gap: 10px;
  }

  .card-section h2 {
    font-size: 18px;
  }

  .sign-image {
    max-width: 70px;
    max-height: 70px;
  }

  .center-image,
  .card-section.center img,
  .image-placeholder,
  .image-placeholder img {
    max-height: 80px;
  }
}
</style>